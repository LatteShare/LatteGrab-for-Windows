<Window x:Class="LatteGrab.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LatteGrab"
        mc:Ignorable="d"
        Title="Login" Height="166.78" Width="227.288">
    <Grid>
        <Label x:Name="label" Content="Username" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Height="23" Margin="86,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" ToolTip="Username"/>
        <PasswordBox x:Name="passwordTextBox" HorizontalAlignment="Left" Margin="86,55,0,0" VerticalAlignment="Top" Width="120" ToolTip="Password" Height="23"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="131,100,0,0" VerticalAlignment="Top" Width="75" Click="loginButton_Click"/>
    </Grid>
</Window>
